<script>
  (function (document) {
    'use strict';

    var LightTableFilter = (function (Arr) {

      var _input;
      var totalCount;
      var listingCount;
      var listingAmountCount;

      function _onInputEvent(e) {
        _input = e.target;
        var tables = document.getElementsByClassName(_input.getAttribute('data-table'));
        Arr.forEach.call(tables, function (table) {
          Arr.forEach.call(table.tBodies, function (tbody) {
            Arr.forEach.call(tbody.rows, _filter);
          });
        });

        listingCount = 0;
        listingAmountCount = 0;
        Arr.forEach.call(tables, function (table) {
          Arr.forEach.call(table.tBodies, function (tbody) {
            Arr.forEach.call(tbody.rows, _count);
          });
        });
        document.getElementById("listingCount").innerText = listingCount;
        document.getElementById("listingAmountCount").innerText = listingAmountCount;
      }

      function _count(row){
        if(row.style.display == ''){
          listingCount++;
          listingAmountCount += parseFloat(row.getAttribute('data-amount'));
        }
      }

      function _filter(row) {
        var text = row.textContent.toLowerCase(), val = _input.value.toLowerCase();
        row.style.display = text.indexOf(val) === -1 ? 'none'  : '';
      }

      return {
        init: function () {
          totalCount = parseInt(document.getElementById("listingCount").innerText);
          var input = document.getElementById('light-table-filter-trans');
          if(input)
          input.oninput = _onInputEvent;
        }
      };
    })(Array.prototype);


    LightTableFilter.init();

  })(document);
</script>


















































