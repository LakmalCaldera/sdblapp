<section class="inner-padding">
  <input type="text" class="app-search" id="light-table-filter-trans" placeholder="Search.." data-table="order-table">
  <table class="app-table order-table table fixed_headers scroll">
    <thead>
    <tr class="header">
      <td class="bold">#</td>
      <td class="bold">Agent</td>
      <td class="bold">Customer</td>
      <td class="bold">Amount</td>
      <td class="bold">Status</td>
      <td class="bold">Created</td>
      <td class="bold">Updated</td>
      <td class="bold">Actions</td>
    </tr>
    </thead>
    <tbody>
    <% @transactions.each_with_index do |transaction, index| %>
        <tr data-amount="<%= transaction.amount %>">
          <td scope="row" class="bold"><%= index %></td>
          <td><%= transaction.agent %></td>
          <td><%= transaction.customer %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.status %></td>
          <td><%= transaction.created_at %></td>
          <td><%= transaction.updated_at %></td>
          <td>
            <%= link_to '<div class="delete-btn"><i class="fa fa-times red-text"></i>&nbsp;Delete</div>'.html_safe, transaction, method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
          <td></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <table class="app-table">
    <thead>
    <tr class="header">
      <td class="bold">Summary</td>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td class="bold">Currently listing count</td>
