<div class="home-container parent-center">

  <div class="child-center">

    <div class="logo no-bullet"></div>


    <p class="alert"><%= alert %></p>




          <div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div>
                <div class="login-field">
                  <span class="fa fa-user username"></span>
                  <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
                </div>
              </div>
              <div>
                <div class="login-field">
                  <span class="fa fa-lock password"></span>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
                </div>
              </div>
              <div>
                <div class="login-btn-container">
                  <%= f.submit "Log in", class: "button expand login-btn", value: "Log In" %>
                </div>
              </div>
            <% end %>
          </div>










  </div>
</div>
